<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @album.title %>
</p>

<ul>
  <% @album.artists.each do |artist| %>
    <li><%= artist.name %></li>
    <% end %>
</ul>

<p>
  <strong>Genre:</strong>
  <%= @album.genre %>
</p>

<p>
  <strong>Year:</strong>
  <%= @album.year %>
</p>

<p>
  <strong>Plays:</strong>
  <%= @album.plays %>
</p>

<p>
  <strong>Label:</strong>
  <%= @album.label.name %>
</p>

