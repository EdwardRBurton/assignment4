<p id="notice"><%= notice %></p>

<h1>Labels</h1>
<%= form_tag(search_labels_url, method: 'get') do %>
  <%= csp_meta_tag %>
  <%= label_tag(:q, 'Search for:') %>
  <%= text_field_tag(:q) %>
  <%= submit_tag('Search') %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ceo</th>
      <th>Founded</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= label.ceo %></td>
        <td><%= label.founded %></td>
        <td><%= link_to 'Show', label %></td>
        <td><%= link_to 'Edit', edit_label_path(label) %></td>
        <td><%= link_to 'Destroy', label, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

